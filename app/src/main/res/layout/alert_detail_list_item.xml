<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/gray_white_selector">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CX-5-盒式固定测斜仪"
        android:drawablePadding="3dp"
        android:id="@+id/location"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/smaller_text_view"
        android:text="2016-10-08 10:40:15.593"
        android:id="@+id/date"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        fresco:layout_constraintTop_toTopOf="@+id/location"
        fresco:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp" />

    <TextView
        android:text="告警值 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/location"
        fresco:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>