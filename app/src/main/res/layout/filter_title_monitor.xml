<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/global"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/white">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="35dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp"
            android:id="@+id/linearLayout" android:background="@color/white">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:background="@drawable/gray_white_selector"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="位置"
                    android:id="@+id/title_left" android:layout_weight="1" android:gravity="center"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:paddingRight="10dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/indicator_sort" android:layout_centerVertical="true"
                    android:layout_marginLeft="115dp" android:src="@drawable/filter_arrow"/>
        </RelativeLayout>
        <View android:layout_width="1px" android:layout_height="match_parent" android:background="@color/default_color"/>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:background="@drawable/gray_white_selector"
                    android:text="时间"
                    android:id="@+id/title_right" android:layout_weight="1" android:gravity="center"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:paddingRight="10dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/indicator_filter" android:layout_centerVertical="true"
                       android:layout_marginLeft="115dp" android:src="@drawable/filter_arrow"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/default_color"
          android:layout_below="@+id/linearLayout" android:id="@+id/view"/>

</RelativeLayout>