<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textAppearanceMedium">@style/my_medium</item>
        <item name="actionMenuTextColor">@color/text_view_selector</item>
    </style>

    <style name="nav_footer_image_view">
        <item name="android:layout_marginTop">5dp</item >
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="edit_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="my_edit_text" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="my_button" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smaller_text_view" parent="android:TextAppearance.Holo.Large">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/default_color</item>
    </style>

    <style name="small_text_view" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">@color/default_color</item>
    </style>

    <style name="large_text_view" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="medium_text_view" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="my_medium">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="popup_window_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_from_bottom</item>
    </style>

</resources>
